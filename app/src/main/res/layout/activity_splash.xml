<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/splash_background">

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ami-Match"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/cheesyStatementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Your Match in University!"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@id/appNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/developerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designed and Developed by AdityaUpreti"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@id/cheesyStatementTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_autoPlay="true"
        app:lottie_fileName="load.json"
        app:lottie_loop="true"
        android:layout_below="@id/developerNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
